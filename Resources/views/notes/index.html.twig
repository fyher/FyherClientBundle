<div class="card-header">
    <div class="row">
        <div class="col-md-4">
            <b>Liste des notes</b>
        </div>
        <div class="col-md-2 offset-md-6">
            <a href="#" data-link="{{ url("notes_add_note",{"hashclient":client.hashClient}) }}"  data-nom="Ajouter une note pour le client {{ client.nomClient |capitalize }} {{ client.prenomClient | capitalize }}" class="btn btn-sm btn-warning openpopupfyher" data-toggle="tooltip" data-placement="top" title="Ajouter une alarme"><i class="fa fa-sticky-note"></i> </a>

        </div>
    </div>
</div>
<div class="card-body">
    {% if listeNote %}
        {% for note in listeNote %}
            <div class="row alert alert-secondary">
                <div class="col-md-12" style="font-size:12px;">
                    <b>{{  note.titreNote |capitalize }}</b> <br> <i> {{ note.dateCreationNote | localizeddate('none', 'none', null, null, ' EEEE d MMMM Y kk:mm')  }}</i> par {{ note.emailAuteurNote }}<br>
                    {{ note.descriptionNote |capitalize }}

                </div>
            </div>




        {% endfor %}
    {% else %}
            <b>Aucune note</b>
    {% endif %}
</div>
